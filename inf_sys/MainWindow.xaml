<Window x:Class="inf_sys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inf_sys"
        mc:Ignorable="d"
        Background="#F2F5ED"
    
        Title="MainWindow" Height="438" Width="560">
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="249"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Style="{DynamicResource ButtonStyle1}" Content="Авторизация" Click="Open_Autorisation_Window" Grid.Row="1" FontSize="30" FontFamily="Arial" Foreground="#688749" Grid.Column="1" Margin="0,10,0,10" />
        <Button Style="{DynamicResource ButtonStyle1}" Content="Регистрация" Click="Open_Registration_Window" Grid.Row="2"  FontFamily="Arial" FontSize="30" Foreground="#688749" Grid.Column="1" Margin="0,10,0,10"/>
        <Image Source="/icon.png" Width="98" Height="96" Grid.Column="1" />

    </Grid>

    
</Window>
